{{>header}}
<div class="row center-align">
    <h3>{{movie.title}}</h3>
</div>
<div class="row">
    <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">{{movie.title}}</span>
                    <h6>{{movie.director}}</h6>
                    <p>{{movie.Genre}}</p>
                    <p>{{movie.year}}</p>
                    <p>{{movie.country}}</p>
                </div>
            </div>
    </div>
</div>
<div class="row">
    {{#actors}}
    <div class="col s8">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">{{surname}}</span>
                        <h6>{{name}}</h6>
                    </div>

                <div class="card-action">
                    <form name="movie" action="/actor/{{id}}" method="get">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Visualizza
                        </button>
                    </form>
                </div>
                 </div>
        </div>
    {{/actors}}
</div>
{{>footer}}
